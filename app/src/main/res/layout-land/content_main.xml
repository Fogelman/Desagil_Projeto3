<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/relativeLayout">

    <Button
        android:id="@+id/btnMorse"
        android:layout_width="120dp"
        android:layout_height="93dp"
        android:layout_marginBottom="4dp"
        android:text=".-"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnSpace"
        android:layout_width="118dp"
        android:layout_height="96dp"
        android:text="Space"
        app:layout_constraintEnd_toStartOf="@+id/btnMorse"
        app:layout_constraintTop_toTopOf="@+id/btnMorse" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/btnMorse"
        app:layout_constraintTop_toTopOf="@+id/btnMorse" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMorse" />

    <TextView
        android:id="@+id/morseView"
        android:layout_width="196dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="116dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/btnMorse"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Morse" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Mensagem"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>