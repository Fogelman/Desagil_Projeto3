<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnMorse"
        android:layout_width="144dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="11dp"
        android:text=".-"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSpace"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignTop="@+id/btnMorse"
        android:layout_marginTop="-84dp"
        android:layout_marginEnd="-265dp"
        android:layout_toStartOf="@+id/btnMorse"
        android:text="Space" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="117dp"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/btnMorse"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-12dp"
        android:layout_toEndOf="@+id/btnMorse"
        android:text="Delete" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="117dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="9dp"
        android:layout_toEndOf="@+id/btnMorse"
        android:text="Send" />

    <TextView
        android:id="@+id/morseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="65dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        tools:text="Morse" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Mensagem"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="71dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="498dp"
        android:layout_marginBottom="152dp"
        android:text="UP" />

    <Button
        android:id="@+id/button2"
        android:layout_width="66dp"
        android:layout_height="122dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="426dp"
        android:layout_marginBottom="154dp"
        android:text="Down" />
</RelativeLayout>